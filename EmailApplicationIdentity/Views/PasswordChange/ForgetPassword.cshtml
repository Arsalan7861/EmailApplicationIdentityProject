                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="fm-checkbox">
                        <button class="btn btn-success notika-btn-success align-self-center">Send Reset Link</button>
                    </div>
                    <div class="fm-checkbox alert alert-danger" asp-validation-summary="ModelOnly">
                        
