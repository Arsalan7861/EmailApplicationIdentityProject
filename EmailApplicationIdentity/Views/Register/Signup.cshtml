@using EmailApplicationIdentity.Models.IdentityModels
@model RegisterUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Identity Registeration Form</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-35/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-35/css/style.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="form-v9">
    <div class="page-content">
        <div class="form-v9-content" style="background-image: url('/colorlib-regform-35/images/form-v9.jpg')">
            <form class="form-detail" method="post">
                <h2>New User Registeration</h2>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Name" placeholder="Your Name">
                    </div>
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Surname" placeholder="Your Surname">
                    </div>
                </div>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Username" placeholder="Your Username">
                    </div>
                    <div class="form-row">
                        <input type="email" class="input-text" asp-for="Email" placeholder="Your Email">
                    </div>
                </div>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="password" class="input-text" asp-for="Password" placeholder="Your Password">
                    </div>
                    <div class="form-row">
                        <input type="password" class="input-text" asp-for="ConfirmPassword" placeholder="Comfirm Password">
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-row-last d-flex justify-content-end" style="align-items: baseline;">
                    <a type="button" class="btn btn-info" href="/Login/UserLogin">Back to Login</a>
                    <input type="submit" class="register" value="Register">
                </div>
            </form>
            
        </div>
    </div>
</body>
</html>
