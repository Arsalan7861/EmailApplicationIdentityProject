@model List<MessageListWithUserInfoViewModel>

<li class="nav-item dropdown">
    <a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="nav-link dropdown-toggle"><span><i class="notika-icon notika-mail"></i></span></a>
    <div role="menu" class="dropdown-menu message-dd animated zoomIn">
        <div class="hd-mg-tt">
            <h2>Messages</h2>
        </div>
        <div class="hd-message-info">
            @foreach (var item in Model)
            {
                <a href="#">
                    <div class="hd-message-sn">
                        <img src="@item.ProfileImageUrl" alt="" class="img-responsive img-circle" style="width:40px; height:40px; object-fit:cover;" />
                        <div class="hd-mg-ctn" style="
                             margin-left: 5px;">
                            <h3>@item.FullName</h3>
                            <p>@Html.Raw(item.MessageDetail)</p>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="hd-mg-va">
            <a href="/Message/Inbox">View All</a>
        </div>
    </div>
</li>