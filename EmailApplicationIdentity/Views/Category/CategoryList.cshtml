
@{
    ViewData["Title"] = "CtegoryList";
    Layout = "~/Views/UserLayout/Index.cshtml";
    var count = 0;
}
@model List<Category>

@await Component.InvokeAsync("_BreadCombUserLayoutComponentPartial", new { title = "Category List", content = "Welcome, you can see categories in here.", icon = "notika-promos" })

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        @if (item.CategoryStatus)
                                        {
                                            <span>Active</span>
                                        }else
                                        {
                                        <span>Passive</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary">Update</a>
                                    </td>
                                    <td>
                                        <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory" class="btn btn-info">Create New Category</a>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





