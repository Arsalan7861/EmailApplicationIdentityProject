@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name Surnam</th>
                                <th>Username</th>
                                <th>User Email</th>
                                <th>User State</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@user.Name @user.Surname</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.IsActive) 
                                        {
                                            <a asp-action="DeactivateUser" asp-controller="User" asp-route-id="@user.Id" class="btn btn-danger">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a asp-action="ActivateUser" asp-controller="User" asp-route-id="@user.Id" class="btn btn-success">Activate</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
