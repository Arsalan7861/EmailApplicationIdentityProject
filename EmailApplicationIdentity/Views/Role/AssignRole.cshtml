@using EmailApplicationIdentity.Models.IdentityModels
@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

@await Component.InvokeAsync("_BreadCombUserLayoutComponentPartial", new { title = "User Role List", content = "Welcome, you can assign roles to selected user.", icon = "notika-edit" })

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">

                    <form method="post">
                        @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input type="checkbox" class="form-check-input" asp-for="@Model[i].RoleExist" />
                                <label class="form-check-label" asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
                                </div>
                            }
                            <button class="btn btn-info">Save</button>
                    </form>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

