@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

@{
    var count = 0;
}

@await Component.InvokeAsync("_BreadCombUserLayoutComponentPartial", new { title = "Role List", content = "Welcome, you can see roles in here.", icon = "notika-flag" })

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Role Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@role.Name</td>
                                    <td>
                                        <a asp-action="EditRole" asp-route-roleId="@role.Id" class="btn btn-warning">Edit</a>
                                        <a asp-action="DeleteRole" asp-route-roleId="@role.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="@Url.Action("CreateRole", "Role")" class="btn btn-primary">Create New Role</a>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

