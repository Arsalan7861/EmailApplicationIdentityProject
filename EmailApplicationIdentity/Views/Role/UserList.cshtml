@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/UserLayout/Index.cshtml";
    var count = 0;
}

@await Component.InvokeAsync("_BreadCombUserLayoutComponentPartial", new { title = "User List", content = "Welcome, you can see users and assign roles to them.", icon = "notika-edit" })

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name Surnam</th>
                                <th>Username</th>
                                <th>User Email</th>
                                <th>Assign Role</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@user.Name @user.Surname</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <a asp-action="AssignRole" asp-route-userId="@user.Id" class="btn btn-warning">Assign Role</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
